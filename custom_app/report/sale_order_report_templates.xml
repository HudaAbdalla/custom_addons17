 <odoo>
 <template id="report_sale_order">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">

            <div class="page">
                <h2>Sale Order <t t-esc="doc.name"/></h2>

                <p><strong>Customer:</strong> <t t-esc="doc.partner_id.name or ''"/></p>
                <p><strong>Date:</strong> <t t-esc="doc.date_order"/></p>
                <p><strong>Total:</strong> <t t-esc="doc.amount_total"/></p>

                <h3>Order Lines</h3>
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.order_line" t-as="line">
                            <tr>
                                <td><t t-esc="line.product_id.display_name or ''"/></td>
                                <td><t t-esc="line.product_uom_qty"/></td>
                                <td><t t-esc="line.price_unit"/></td>
                                <td><t t-esc="line.price_subtotal"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>

        </t>
    </t>
</template>
