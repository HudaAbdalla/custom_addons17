<odoo>
    <record id="group_regular_doctors" model="res.groups">
        <field name="name">Regular Doctor</field>
    </record>

    <record id="group_show_appointments_notes" model="res.groups">
        <field name="name">Show Appointments Notes</field>
    </record>

    <record id="group_create_departments" model="res.groups">
        <field name="name">Create Departments</field>
    </record>

    <record id="group_general_departments" model="res.groups">
        <field name="name">General Departments</field>
    </record>

    <record id="ir_rule_regular_doctors" model="ir.rule">
        <field name="name">Regular Doctor Rule</field>
        <field name="model_id" ref="cleopatra_hospital.model_hospital_appointment"/>
        <field name="domain_force">[('doctor_id', '=', user.doctor_id.id)]
        </field>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('cleopatra_hospital.group_regular_doctors'))]"/>
    </record>


</odoo>