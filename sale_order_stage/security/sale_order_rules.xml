<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Viewer: Can see all sales orders (read only enforced by ACL) -->
    <record id="sale_order_rule_sales_viewer" model="ir.rule">
        <field name="name">Sales Viewer - Own SOs Only</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="domain_force">[("user_id", "=", user.id)]</field>
    </record>
    
    <!-- Sales Editor: Only own SOs -->
    <record id="sale_order_rule_sales_editor" model="ir.rule">
        <field name="name">Sales Editor - Own SOs Only</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="domain_force">[("user_id", "=", user.id)]</field>
    </record>

    <!-- Sales Admin: Access to all SOs -->
    <record id="sale_order_rule_sales_admin" model="ir.rule">
        <field name="name">Sales Admin - All SOs</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        <field name="domain_force">[("id","!=",False)]</field>
    </record>
</odoo>