<odoo>
    <record id="view_maintenance_request_list" model="ir.ui.view">
        <field name="name">maintenance.request.list</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_request"/>
                <field name="employee_id"/>
                <field name="cost"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_maintenance_request_form" model="ir.ui.view">
        <field name="name">maintenance.request.form</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <form>

                <header>
                    <button name="action_in_progress"
                            type="object"
                            string="Start"
                            class="oe_highlight"
                            groups="maintenance_custom_app.group_maintenance_officer"
                            invisible="state != 'draft'"/>

                    <button name="action_done"
                            type="object"
                            string="Mark Done"
                            class="oe_highlight"
                            groups="maintenance_custom_app.group_maintenance_manager"
                            invisible="state != 'in_progress'"/>

                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date_request"/>
                        <field name="employee_id"/>
                        <field name="cost"/>
                    </group>
                </sheet>

                <!-- âœ… Chatter Panel -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>

            </form>
        </field>
    </record>

    <record id="view_maintenance_request_search" model="ir.ui.view">
    <field name="name">maintenance.request.search</field>
    <field name="model">maintenance.request</field>
    <field name="arch" type="xml">
        <search string="Search Maintenance Requests">
            
            <!-- Search by Name -->
            <field name="name"/>

            <!-- Search by Employee -->
            <field name="employee_id" string="Employee"/>

            <!--  Filters -->
            <filter name="filter_draft" string="Draft" domain="[('state','=','draft')]"/>
            <filter name="filter_in_progress" string="In Progress" domain="[('state','=','in_progress')]"/>
            <filter name="filter_done" string="Done" domain="[('state','=','done')]"/>

            <group expand="0" string="Group By">

                <!-- Group by Status -->
                <filter name="group_status"
                        string="Status"
                        context="{'group_by': 'state'}"/>

                <!-- Group by Date -->
                <filter name="group_date"
                        string="Request Date"
                        context="{'group_by': 'date_request'}"/>

                <!-- Group by Employee -->
                <filter name="group_employee"
                        string="Employee"
                        context="{'group_by': 'employee_id'}"/>

            </group>
        </search>
    </field>
    </record>

    <record id="action_maintenance_request" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">maintenance.request</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_maintenance_request_search"/>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_maintenance_root" name="Maintenance" sequence="10"/>
    
    <menuitem id="menu_maintenance_request"
              parent="menu_maintenance_root"
              name="Requests"
              action="action_maintenance_request"/>
</odoo>
